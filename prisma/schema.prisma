generator client {
  provider = "prisma-client-js"
}

generator docs {
  provider         = "node ./dist/index.js"
  includeRelations = false
  prefix           = "tbx_"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  email       String   @unique
  weight      Float?
  is18        Boolean?
  name        String?
  successorId Int?
  role        Role     @default(USER)
  posts       Post[]
  keywords    String[]
  biography   Json
  decimal     Decimal
  biginteger  BigInt
}

model Post {
  // id     String @id @default(cuid())
  id     Int   @id @default(autoincrement())
  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

enum Role {
  USER
  ADMIN
}
